@using System.Security.Claims;
@model WebApplicationADs_Eixo2.Models.Calendario

@{int CurrentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value);}

@{
    ViewData["Title"] = "Edit";
}

<h1>Edite seu Agendamento:</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label"></label>
                <input asp-for="HoraFim" class="form-control" />
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" placeholder="Escreva uma breve descrição"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index">Voltar</a>
                @if (Model.IdUser == CurrentUserId)
                {
                    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                }
            </div>
            <h6>@ViewBag.MessageError</h6>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
