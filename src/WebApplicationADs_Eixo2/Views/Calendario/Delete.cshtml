@using System.Security.Claims;
@model WebApplicationADs_Eixo2.Models.Calendario

@{int CurrentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value);}

@{
    ViewData["Title"] = "Delete";
}

<h1>Cancelar um Agendamento:</h1>

<h3>Tem certeza que deseja cancelar este angendamento?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraFim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraFim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Voltar</a>
        @if (Model.IdUser == CurrentUserId)
        {
            <input type="submit" value="Cancelar" class="btn btn-danger" />
        }
    </form>
</div>
